doctype html
html
  head
    title
      | PriImage
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'

  body
    .ui.pink.inverted.segment
      .ui.top.stackable.labeled.inverted.pink.secondary.pointing.visible.sidebar.menu
        = link_to images_path, class: 'item ui link inverted' do
          | Priâ™¡Image
        = link_to select_animation_images_path, class: 'item ui link inverted' do
          i.search.icon
          | Search
        = link_to new_image_path, class: 'item ui link right inverted' do
          i.cloud.upload.icon
          | Upload

    .pusher
      .content
        .ui.padding.stackable.container
          - if flash.present?
            .ui.positive.message
              - flash.each do |key, value|
                = content_tag(:div, value, class: "#{key}")
          == yield
